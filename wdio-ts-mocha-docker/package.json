{
  "name": "@test/wdio-ts-mocha-docker",
  "version": "1.0.0",
  "description": "wdio-ts-mocha-docker",
  "scripts": {
    "test": "wdio run ./wdio.conf.ts",
    "test:docker": "docker-compose up --build --abort-on-container-exit",
    "test:local": "wdio run ./wdio.conf.ts",
    "clean": "rm -rf allure-results reports",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "yarn:test": "yarn && wdio run ./wdio.conf.ts",
    "yarn:install": "yarn install",
    "yarn:clean": "yarn && rm -rf allure-results reports",
    "harness:setup": "node -e \"require('./src/harness/TestHarness').TestHarness.setup()\"",
    "harness:run": "yarn test",
    "harness:teardown": "node -e \"require('./src/harness/TestHarness').TestHarness.teardown()\"",
    "ci:test": "yarn test:docker",
    "ci:lint": "echo 'Linting not configured yet'",
    "ci:security": "echo 'Security scan not configured yet'"
  },
  "dependencies": {
    "@wdio/allure-reporter": "^8.16.0",
    "@wdio/cli": "^8.16.0",
    "@wdio/local-runner": "^8.46.0",
    "@wdio/mocha-framework": "^8.16.0",
    "@wdio/spec-reporter": "^8.16.0",
    "typescript": "^5.1.6",
    "webdriverio": "^8.16.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "10.0.10",
    "@types/node": "^20.11.7",
    "@wdio/globals": "^8.16.0",
    "@wdio/types": "^8.16.0",
    "allure-commandline": "^2.24.1",
    "chai": "^4.3.7",
    "chromedriver": "^142.0.3",
    "ts-node": "^10.9.1",
    "wdio-chromedriver-service": "^8.1.1"
  }
}
